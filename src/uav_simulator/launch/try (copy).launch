<launch>
  <!-- World selection -->
  <arg name="paused" value="false"/>
  <arg name="verbose" value="false"/>
  <arg name="use_sim_time" value="true"/>
  <arg name="debug" value="true"/>
  <arg name="world_name" value="$(find uav_simulator)/worlds/room/room_empty.world"/>
  <arg name="planner" default="teb"/>

  <!-- Launch Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="$(arg paused)"/>
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="verbose" value="$(arg verbose)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- UAV group -->
  <param name="robot_description" command="cat '$(find uav_simulator)/urdf/quadcopter.urdf'" />
  <node name="spawn_uav" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param robot_description -model quadcopter -x 5 -y 0 -z 0.5 -Y 0.0" respawn="false"/>
  <node pkg="topic_tools" type="throttle" name="gt_pose_throttle" args="messages /CERLAB/quadcopter/pose_raw 30 /CERLAB/quadcopter/pose"/>
  <node pkg="topic_tools" type="throttle" name="gt_vel_throttle" args="messages /CERLAB/quadcopter/vel_raw 30 /CERLAB/quadcopter/vel"/>
  <node pkg="topic_tools" type="throttle" name="gt_acc_throttle" args="messages /CERLAB/quadcopter/acc_raw 30 /CERLAB/quadcopter/acc"/>
  <node pkg="topic_tools" type="throttle" name="gt_odom_throttle" args="messages /CERLAB/quadcopter/odom_raw 30 /CERLAB/quadcopter/odom"/>
  <include file="$(find uav_simulator)/launch/setupTF.launch">
    <arg name="pose_topic" value="/CERLAB/quadcopter/pose" />
  </include>
  <node name="keyboard_control" pkg="uav_simulator" type="keyboard_control" />

  <!-- UGV group -->
  <group ns="ugv">
    <include file="$(find scout_gazebo_sim)/launch/spawn_scout_mini.launch"></include>

    <!-- UGV: spawn in Gazebo -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find scout_description)/rviz/model_display.rviz" />

    <!-- UGV: Load joint controller configurations -->
    <node pkg="tf" type="static_transform_publisher" name="odom_to_base_link" args=" 0 0.03 -1.0 0 0 0 odom base_link 10" />

    <!-- UGV: Robot state publisher -->
    <node pkg="tf" type="static_transform_publisher" name="base_to_velodyne" args=" 0 0.03 0 0 0 0 base_link velodyne 10" />

    <!-- UGV: Joint state publisher -->
    <include file="$(find scout_gazebo_sim)/launch/include/filter_points.launch"></include>

    <!-- UGV: Static transform publisher -->
    <include file="$(find scout_gazebo_sim)/launch/include/pc2l.launch"></include>

    <!-- UGV: Spawn controllers -->
    <include file="$(find scout_gazebo_sim)/launch/include/gmapping.launch"></include>

    <include file="$(find scout_gazebo_sim)/launch/include/move_base.launch">
      <arg name="planner" value="$(arg planner)"/>
  </include>
  </group>

</launch>

